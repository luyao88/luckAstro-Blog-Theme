---
import SITE_INFO from '@/config'
import './MainHeader.less'

const { HomeBanner } = SITE_INFO
const { isHome } = Astro.props
---

<div class={`header-main ${isHome ? 'bg-video' : 'bg-image'}`}>
  {
    isHome && (
      <video
        class="video-bg"
        autoplay
        loop
        muted
        playsinline
        poster={HomeBanner.backgroundImg}
      >
        <source src={HomeBanner.backgroundVideo} type="video/mp4" />
      </video>
    )
  }
  {isHome && <div class="header-mask" />}
  <div class="avatar">
    <img
      src="/assets/images/lazy-loading.webp"
      data-vh-lz-src={SITE_INFO.Avatar}
      alt="avatar"
    />
  </div>
  <!-- 添加作者logo -->
  <h3 class="auther">{SITE_INFO.Author || '-'}</h3>
  <!-- 添加打字机效果 -->
  <p class="desc"></p>
  <!-- 添加箭头元素 -->
  {
    isHome && (
      <div class="arrow-down">
        <svg
          class="icon"
          viewBox="0 0 1024 1024"
          version="1.1"
          xmlns="http://www.w3.org/2000/svg"
          p-id="62422"
          width="30"
          height="35"
        >
          <>
            <path
              d="M108.775 312.23c13.553 0 27.106 3.734 39.153 11.806l375.205 250.338 363.641-252.808c32.587-21.624 76.499-12.83 98.123 19.757 21.685 32.467 12.95 76.56-19.576 98.184l-402.854 278.89c-23.733 15.901-54.694 15.962-78.547.12L69.501 442.097c-32.647-21.685-41.441-65.777-19.817-98.304 13.734-20.54 36.201-31.563 59.09-31.563Z"
              fill-opacity="0.3"
              transform="translate(0, -300)"
            />
            <path
              d="M108.775 312.23c13.553 0 27.106 3.734 39.153 11.806l375.205 250.338 363.641-252.808c32.587-21.624 76.499-12.83 98.123 19.757 21.685 32.467 12.95 76.56-19.576 98.184l-402.854 278.89c-23.733 15.901-54.694 15.962-78.547.12L69.501 442.097c-32.647-21.685-41.441-65.777-19.817-98.304 13.734-20.54 36.201-31.563 59.09-31.563Z"
              transform="translate(0, 100)"
            />
          </>
        </svg>
      </div>
    )
  }
</div>
